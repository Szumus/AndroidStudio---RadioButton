<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3E3939"
    android:importantForAccessibility="no">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="358dp"
            android:layout_height="194dp"
            app:srcCompat="@drawable/images" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jak nazywa sie ten item?"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eclipse"
            android:textColor="#FFFFFF" /><RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kraken Slayer"
        android:textColor="#FFFFFF" /><RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doran ring's"
        android:textColor="#FFFFFF" /><RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trinity Force"
        android:textColor="#FFFFFF" /><RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Boots of Speed"
        android:textColor="#FFFFFF" />
        </RadioGroup>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="358dp"
            android:layout_height="194dp"
            app:srcCompat="@drawable/image2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kto stworzył gre Leage of legends?"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />
        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioButton6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Riot Games"
                android:textColor="#FFFFFF" /><RadioButton
            android:id="@+id/radioButton7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EA"
            android:textColor="#FFFFFF" /><RadioButton
            android:id="@+id/radioButton8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frome softwere"
            android:textColor="#FFFFFF" /><RadioButton
            android:id="@+id/radioButton9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ActiVsion"
            android:textColor="#FFFFFF" /><RadioButton
            android:id="@+id/radioButton10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blizard"
            android:textColor="#FFFFFF" />
        </RadioGroup>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="358dp"
            android:layout_height="194dp"
            app:srcCompat="@drawable/image3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Który bohater w League of Legends jest znany z umiejętności 'Fear Beyond Death'?"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />
        <RadioGroup
            android:id="@+id/radioGroup3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <RadioButton
            android:id="@+id/radioButton11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thresh"
            android:textColor="#FFFFFF" /><RadioButton
        android:id="@+id/radioButton12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pyke"
        android:textColor="#FFFFFF" /><RadioButton
        android:id="@+id/radioButton13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ahri"
        android:textColor="#FFFFFF" /><RadioButton
        android:id="@+id/radioButton14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Akali"
        android:textColor="#FFFFFF" /><RadioButton
        android:id="@+id/radioButton15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ornn"
        android:textColor="#FFFFFF" />
    </RadioGroup>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="358dp"
            android:layout_height="194dp"
            app:srcCompat="@drawable/image3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jakie są trzy główne role w grze League of Legends?"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />
        <RadioGroup
            android:id="@+id/radioGroup4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/radioButton16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Strzelec,Mag,Healer"
                android:textColor="#FFFFFF" /><RadioButton
            android:id="@+id/radioButton17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mid,Jungle,Top"
            android:textColor="#FFFFFF" /><RadioButton
            android:id="@+id/radioButton18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Strzelec,Support,Tank"
            android:textColor="#FFFFFF" /><RadioButton
            android:id="@+id/radioButton19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carry,AD, Support"
            android:textColor="#FFFFFF" /><RadioButton
            android:id="@+id/radioButton20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Midlaner, AD Carry, Mag"
            android:textColor="#FFFFFF" />
        </RadioGroup>
        <Button
            android:id="@+id/checkAnswersButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sprawdź odpowiedzi" />

        <TextView
            android:id="@+id/errorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wynik"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginTop="20dp"/>




</LinearLayout>
</ScrollView>
